---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
  showPrevNext?: boolean;
}

const { noMarginTop = false, showPrevNext = false } = Astro.props;
---

<footer
  class={`${noMarginTop ? "" : "mt-auto"} ${showPrevNext ? "mb-24" : ""}`}
>
  <Hr noPadding />
  <div class="footer-wrapper">
    <div class="copyright-wrapper">
      <span>Copyright &#169; {currentYear}</span>
      <span class="separator">&nbsp;|&nbsp;</span>
      <span>All rights reserved.</span>
    </div>
    <Socials />
  </div>
</footer>

<style>
  footer {
    @apply w-full;
  }
  .footer-wrapper {
    @apply flex flex-col sm:flex-row items-center justify-between py-6 sm:py-4;
  }
  .copyright-wrapper {
    @apply my-2 flex flex-col items-center whitespace-nowrap sm:flex-row sm:items-start;
  }
  .separator {
    @apply hidden sm:inline;
  }
</style>
